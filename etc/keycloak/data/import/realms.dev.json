{
  "realm": "ventilos-dev",
  "enabled": true,
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "rememberMe": true,
  "verifyEmail": false,
  "sslRequired": "none",

  "roles": {
    "realm": [
      { "name": "admin_global", "description": "Administrateur global" },
      { "name": "admin_pedagogique", "description": "Administrateur pédagogique" },
      { "name": "formateur", "description": "Peut attribuer des open badges" }
    ]
  },

  "clients": [
    {
      "clientId": "ventilos-app",
      "name": "VentilOS App (front)",
      "publicClient": true,
      "protocol": "openid-connect",
      "attributes": { "pkce.code.challenge.method": "S256" },
      "redirectUris": [
        "http://localhost:3000/*",
        "https://os.la-ventil.org/*"
      ],
      "webOrigins": ["*"],
      "defaultClientScopes": ["web-origins", "profile", "email", "roles"],
      "optionalClientScopes": ["address", "phone"],
      "protocolMappers": [
        {
          "name": "app.profil",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "profil",
            "claim.name": "app.profil",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "app.sous_profil",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "sous_profil",
            "claim.name": "app.sous_profil",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],

  "users": [
    {
      "username": "admin.global",
      "email": "admin.global@la-ventil.org",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "Global",
      "credentials": [{ "type": "password", "value": "dev123", "temporary": false }],
      "realmRoles": ["admin_global"],
      "attributes": { "profil": ["enseignant"], "sous_profil": [""] }
    },
    {
