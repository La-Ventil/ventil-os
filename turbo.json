{
  "$schema": "https://v2-7-6.turborepo.dev/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "MODEM_SERIAL_PORT_PATH",
    "MODEM_SERIAL_PORT_BAUD_RATE"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "prettier": {
      "dependsOn": ["^prettier"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
