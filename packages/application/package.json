{
  "name": "@repo/application",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint \"src/**/*.ts*\" --max-warnings 0",
    "lint:dev": "eslint \"src/**/*.ts*\"",
    "check-types": "tsc --noEmit",
    "lint:staged": "pnpm exec lint-staged -c .lintstagedrc.cjs --relative --cwd ."
  },
  "exports": {
    ".": "./src/index.ts",
    "./mocks": "./src/__mocks__/index.ts",
    "./forms": "./src/forms/index.ts",
    "./forms/*": "./src/forms/*.ts",
    "./*": "./src/*.ts"
  },
  "dependencies": {
    "@repo/db": "workspace:*",
    "@repo/domain": "workspace:*",
    "@repo/view-models": "workspace:*",
    "zod": "^4.1.12",
    "zod-form-data": "^3.0.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.36.0",
    "typescript": "5.9.3"
  }
}
