{
  "name": "ventil-os",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm --filter web build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "start": "pnpm --filter web start",
    "lint": "pnpm -r lint",
    "lint:dev": "pnpm -r lint:dev",
    "lint:staged": "pnpm -r --workspace-concurrency 1 lint:staged",
    "check-types": "pnpm -r check-types",
    "prepare": "husky || true",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:reset": "pnpm --filter @repo/db exec prisma migrate reset --force",
    "deploy:seed": "pnpm --filter @repo/db exec prisma migrate deploy && pnpm --filter @repo/db exec prisma db seed",
    "test": "turbo run test",
    "prettier": "turbo run prettier"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@types/node": "22.15.3",
    "eslint": "^9.36.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.2.5",
    "turbo": "^2.7.6",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.18.0",
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.5",
      "@types/react-dom": "19.2.3"
    },
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@serialport/bindings-cpp",
      "@swc/core",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
