{
  "name": "ventil-os",
  "version": "0.0.11",
  "private": true,
  "scripts": {
    "build": "pnpm --filter web build",
    "clean": "turbo run clean",
    "commit": "cz",
    "dev": "pnpm --filter web dev",
    "start": "pnpm --filter web start",
    "lint": "turbo run lint",
    "lint:dev": "turbo run lint:dev",
    "lint:staged": "pnpm -r --workspace-concurrency 1 lint:staged",
    "check-types": "turbo run check-types",
    "prepare": "husky || true",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "release:prod": "./scripts/release.sh",
    "db:generate": "pnpm --filter @repo/db db:generate",
    "db:deploy": "pnpm --filter @repo/db exec prisma migrate deploy",
    "db:reset": "pnpm --filter @repo/db exec prisma migrate reset --force",
    "db:seed": "pnpm --filter @repo/db exec prisma migrate deploy && pnpm --filter @repo/db db:generate && pnpm --filter @repo/db exec prisma db seed",
    "test": "turbo run test",
    "prettier": "pnpm format"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.45.1",
    "@types/node": "22.15.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "turbo": "^2.7.6",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.29.2",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.5",
      "@types/react-dom": "19.2.3"
    },
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@serialport/bindings-cpp",
      "@swc/core",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
